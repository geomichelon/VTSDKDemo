{
  "$schema": "https://json.schemastore.org/launch.json",
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug core tests",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["test", "--no-run", "-p", "vt-sdk-core"],
        "filter": { "name": "vt-sdk-core", "kind": "test" }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug mock tests",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["test", "--no-run", "-p", "vt-sdk-mock"],
        "filter": { "name": "vt-sdk-mock", "kind": "test" }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}

